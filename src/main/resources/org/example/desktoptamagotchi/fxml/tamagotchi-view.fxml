<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.desktoptamagotchi.controllers.TamagotchiController">

    <Label fx:id="nameLabel"/>
    <Label fx:id="hungerLabel"/>
    <Label fx:id="boredomLabel"/>

    <ImageView x="150.0" y="150.0" fx:id="imageView"/>

    <Button onAction="#onFeedButtonClick" text="Feed"/>
    <Button onAction="#onSpeakButtonClick" text="Speak"/>
    <Button onAction="#onTeachButtonClick" text="Teach"/>
</VBox>
